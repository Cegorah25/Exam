<Window x:Class="GreenhouseLightingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление освещением теплицы" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#FF4682B4" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="АИС Теплица: Управление освещением" 
                          Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="TimeText" Margin="20,0,0,0" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: управление и показания -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Текущие показания -->
                <GroupBox Header="Текущие показания" FontWeight="Bold" Padding="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="В теплице:" Width="120"/>
                            <TextBlock x:Name="IndoorLuxText" FontSize="20" FontWeight="Bold" 
                                      Foreground="Blue" HorizontalAlignment="Right" MinWidth="80"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="На улице:" Width="120"/>
                            <TextBlock x:Name="OutdoorLuxText" FontWeight="Bold" 
                                      Foreground="Green" HorizontalAlignment="Right" MinWidth="80"/>
                        </StackPanel>

                        <TextBlock Text="Уровень освещения:" Margin="0,10,0,5"/>
                        <ProgressBar x:Name="LightProgress" Height="15" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="0 лк" FontSize="10" Foreground="Gray"/>
                            <TextBlock Text="2000 лк" FontSize="10" Foreground="Gray" 
                                      HorizontalAlignment="Center" Margin="75,0,0,0"/>
                            <TextBlock Text="4000 лк" FontSize="10" Foreground="Gray" 
                                      HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Управление системой -->
                <GroupBox Header="Управление системой" FontWeight="Bold" Margin="0,10,0,0" Padding="5">
                    <StackPanel>
                        <Button x:Name="TurnOnButton" Content="ПРИНУДИТЕЛЬНО ВКЛЮЧИТЬ" 
                               Background="LightGreen" Height="40" Margin="5,3,5,3"
                               ToolTip="Включить освещение независимо от показаний датчиков"
                               Click="TurnOnButton_Click"/>

                        <Button x:Name="TurnOffButton" Content="ПРИНУДИТЕЛЬНО ВЫКЛЮЧИТЬ" 
                               Background="LightCoral" Height="40" Margin="5,3,5,3"
                               ToolTip="Выключить освещение независимо от показаний датчиков"
                               Click="TurnOffButton_Click"/>

                        <Button x:Name="AutoModeButton" Content="АВТОМАТИЧЕСКИЙ РЕЖИМ" 
                               Background="LightBlue" Height="40" Margin="5,10,5,3"
                               ToolTip="Вернуть управление автоматической системе"
                               Click="AutoModeButton_Click"/>
                    </StackPanel>
                </GroupBox>

                <!-- Статус системы -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                       Margin="0,15,0,0" Padding="10" Background="#FFF8F8F8">
                    <StackPanel>
                        <TextBlock Text="Статус системы:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="StatusText" TextWrapping="Wrap" MinHeight="60"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Правая панель: журнал событий -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок журнала -->
                <TextBlock Grid.Row="0" Text="Журнал событий" FontWeight="Bold" FontSize="14"
                          Margin="0,0,0,5"/>

                <!-- Сам журнал -->
                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                       CornerRadius="3" Background="White">
                    <ListView x:Name="EventLogListView" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Время" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Time}" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Событие" Width="400">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!-- Кнопка очистки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="ClearLogButton" Content="Очистить журнал" 
                           Click="ClearLogButton_Click" Width="522" Height="35"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Подвал -->
        <StatusBar Grid.Row="2" Background="#FFE6E6FA">
            <StatusBarItem>
                <TextBlock x:Name="ConnectionStatus" Text="Система активна"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="ТЗ: дневное время 7:00-21:00, порог 2500/500 лк" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>